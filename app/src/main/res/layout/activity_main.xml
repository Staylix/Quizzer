<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gentil.gregoire.insaturne.controller.MainActivity"
    android:background="#ffffff">


    <TextView
        android:id="@+id/activity_main_hello_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome !"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/activity_main_how_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Are you ready ?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/activity_main_blaze_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Your Name :"
        android:padding="20dp"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/activity_main_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:padding="30dp"
        android:textColor="#fafafa"
        android:text="Here we go !"
        android:layout_marginTop="40dp"/>

</LinearLayout>
